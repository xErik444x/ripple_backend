# Puerto de la aplicación
PORT=3000

# Conexión a MongoDB
MONGODB_URI=mongodb://localhost:27017/discord-bot

# API Key de OpenAI
OPENAI_API_KEY=sk-your-openai-api-key

# API Key para proteger los endpoints
API_KEY=your-secret-api-key-here

# Patrón de IPs permitidas (usa * como comodín)
ALLOWED_IP_PATTERN=192.168.1.*

# Configuración de logging
LOG_LEVELS=log,error,warn,debug,verbose
LOG_TO_FILE=true
LOG_DIR=logs
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5
